import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    Scanner scan = new Scanner(System.in);

    // create an array to store the integers
    int[] numbers = new int[15];

    // read 15 integers from the user and store them in the array
    for (int i = 0; i < 15; i++) {
      System.out.print("Enter an integer: ");
      numbers[i] = scan.nextInt();
    }

    // print the values stored in the array
    System.out.println("Values in the array: ");
    for (int i = 0; i < 15; i++) {
      System.out.print(numbers[i] + " ");
    }
    System.out.println();

    // ask the user to enter a number to search for
    System.out.print("Enter a number to search for: ");
    int numberToSearch = scan.nextInt();

    // search for the number in the array
    boolean found = false;
    for (int i = 0; i < 15; i++) {
      if (numbers[i] == numberToSearch) {
        found = true;
        System.out.println("The number was found at index " + i);
        break;
      }
    }
    if (!found) {
      System.out.println("The number was not found in this array.");
    }
  }
}
