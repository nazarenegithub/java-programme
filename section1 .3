public class Main {
  public static void main(String[] args) {
    // ask the user to enter a number
    Scanner scanner = new Scanner(System.in);
    System.out.print("Enter a number: ");
    int num = scanner.nextInt();

    // check if the number is divisible by 2
    if (num % 2 == 0) {
      System.out.println(num + " is divisible by 2 because it is an even number.");
    }

    // check if the number is divisible by 3
    int sum = 0;
    int temp = num;
    while (temp > 0) {
      sum += temp % 10;
      temp /= 10;
    }
    if (sum % 3 == 0) {
      System.out.println(num + " is divisible by 3 because the sum of its digits is divisible by 3.");
    }

    // check if the number is divisible by 4
    if (num % 4 == 0) {
      System.out.println(num + " is divisible by 4 because the last two digits form a number divisible by 4.");
    }

    // check if the number is divisible by 5
    if (num % 5 == 0 || num % 10 == 0) {
      System.out.println(num + " is divisible by 5 because it ends in 0 or 5.");
    }

    // check if the number is divisible by 6
    if (num % 2 == 0 && sum % 3 == 0) {
      System.out.println(num + " is divisible by 6 because it is even and the sum of its digits is divisible by 3.");
    }

    // check if the number is divisible by 7
    if (num % 7 == 0) {
      System.out.println(num + " is divisible by 7.");
    }

    // check if the number is divisible by 8
    if (num % 8 == 0) {
      System.out.println(num + " is divisible by 8 because the last three digits form a number divisible by 8.");
    }

    // check if the number is divisible by 9
    if (sum % 9 == 0) {
      System.out.println(num + " is divisible by 9 because the sum of its digits is divisible by 9.");
    }
  }
}
